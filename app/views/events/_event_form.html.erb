
<%= form_for @event, :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form-group">
    <%= f.label :name, "Nombre del evento:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
            <%= f.text_field :name, class: "form-control"%><br />
        </div>
    </div>
    <div class="form-group">
        <%= f.label :price, "Costo del evento:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :price, placeholder: "placeholder text", class: "form-control" %>
        </div>
    </div>
    <br>
    <div class="form-group">
        <%= f.label :description, "Descripción del evento:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_area :description, class: "form-control", size: "60x12" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :image_url, "Imagen del evento:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.file_field :image_url, class: "form-control-file"%>
        </div>
        <hr class="my-2">
    </div>

    <div class="form-group">
        <%= f.label :start_date, "Fecha del evento:", class: "col-md-4 control-label" %>
        <div class="col-md-8"> 
          <%= f.date_field :start_date, { class: 'col-md-4 form-control' } %>
        </div>
    </div>
        
    <div class="form-group">
        <%= f.label :start_time, "Hora de Inicio:", class: "col-md-4 control-label" %> 
        <div class="container">
        <div class="row">
          <%= f.time_select :start_time,{ampm: true, ignore_date: true, start_hour: 5,end_hour: 23, minute_step: 30}, { class: 'col-sm-2 form-control' }%>
        </div>
        </div>
    </div>
    

    <div class="form-group">
          <%= f.label :end_time, "Hora de Finalización:", class: "col-md-4 control-label" %> 
          <div class="container">
          <div class="row">
          <%= f.time_select :end_time,{ampm: true, ignore_date: true, start_hour: 5,end_hour: 23, minute_step: 30}, { class: 'col-sm-2 form-control' }%>
            </div>
            </div>
            <br>
    <hr class="my-2">
    </div>

    <div class="form-group">
        <%= f.label :telephone_field, "Telefono de Contacto:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :event_phone, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :website, "Sitio web:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :website, class: "form-control" %>
        </div>
        <br>
    </div>
    <div class="container">
        <%= f.submit locals[:b_text], :class => "col-md-8 btn btn-primary"%>
        <br>
<% end %>